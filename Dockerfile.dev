# Use the official Bun image as base
FROM oven/bun:1.0.25-alpine

# Set working directory
WORKDIR /app

# Install system dependencies for development
RUN apk add --no-cache \
    git \
    curl \
    bash

# Copy package files first for better caching
COPY package.json bun.lockb* ./

# Install dependencies using Bun
# Use --no-save to avoid lockfile changes in container
RUN bun install --no-save

# Copy the rest of the application code
COPY . .

# Change ownership of the app directory to the existing bun user
RUN chown -R bun:bun /app
USER bun

# Expose the development server port (configurable)
EXPOSE 3000

# Health check to ensure the container is running properly
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000 || exit 1

# Default command for development with hot reloading
# Port will be overridden by docker-compose command
CMD ["bun", "run", "dev", "--host", "0.0.0.0", "--port", "3000"]